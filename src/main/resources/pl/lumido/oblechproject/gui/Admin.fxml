<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.lumido.oblechproject.gui.Admin">
    <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
                <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="75.0" prefWidth="257.0" text=" Oblech project " textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
            <Label text="Admin view" textAlignment="CENTER" textFill="#0000008d">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </children>
      </VBox>
    </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
                <VBox alignment="CENTER">
                    <children>
                        <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGame" prefHeight="45.0" prefWidth="200.0" text="Start Game">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="addPlayerButton" mnemonicParsing="false" onAction="#addPlayer" prefHeight="45.0" prefWidth="200.0" text="Add Player">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#openSettings" prefHeight="45.0" prefWidth="200.0" text="Play Demo">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Button>
                        <Button fx:id="aboutProjectButton" mnemonicParsing="false" onAction="#openAboutProject" prefHeight="45.0" prefWidth="200.0" text="About Project">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </VBox>
              <VBox alignment="CENTER">
               <children>
                  <Label text="Players">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </Label>
                  <ScrollPane>
                     <content>
                        <VBox fx:id="players" alignment="TOP_CENTER" prefHeight="159.0" prefWidth="300.0" />
                     </content>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin></ScrollPane>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
              </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox maxHeight="-Infinity" prefHeight="75.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
